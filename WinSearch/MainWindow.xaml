<Window x:Class="WinSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinSearch"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="True"
        BorderBrush="Black"
        Activated="App_Activated"
        Deactivated="App_Deactivated"
        Title="MainWindow" Height="40.247" Width="600" ResizeMode="NoResize" Topmost="True" WindowState="Normal">
    <Window.Background>
        <SolidColorBrush Color="Black" Opacity=".6"/>
    </Window.Background>
    <Grid Margin="0,0,-0.247,-0.052">
        <Image Source="Resources/search.png" Margin="0,0,0,0.629" HorizontalAlignment="Left" Width="37" />
        <TextBox Focusable="True" Name="SearchBox" TextWrapping="Wrap" Text="" FontSize="25" Foreground="White" Background="Transparent" Margin="42,0,268,-0.371" BorderThickness="0" TextChanged="SearchChanged" />
        <TextBlock Name="ApplicationName" TextWrapping="Wrap" Text="" FontSize="25" Foreground="White" Opacity=".5" Background="Transparent" Margin="332,0,0,-0.371" />
    </Grid>
</Window>
